# Database Configuration
DATABASE_URL="file:./dev.db"

# BGG Authentication (Required for scraping after page 10)
# Get your credentials from https://boardgamegeek.com/
BGG_USERNAME="your_bgg_username"
BGG_PASSWORD="your_bgg_password"

# Scraping Configuration
# Number of parallel workers for detail scraping (1-20)
WORKERS=5

# Debug mode - shows browser window and saves debug files
DEBUG=false

# Rate limiting - milliseconds between requests
RATE_LIMIT_MIN=2000
RATE_LIMIT_MAX=3000

# Batch size for parallel processing
BATCH_SIZE=5